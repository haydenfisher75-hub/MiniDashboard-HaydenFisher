<Window x:Class="MiniDashboard.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MiniDashboard.App.Views"
        Title="MiniDashboard" Height="700" Width="1000"
        WindowState="Maximized">
    <Window.InputBindings>
        <KeyBinding Key="OemPlus" Modifiers="Ctrl" Command="{Binding AddItemCommand}" />
        <KeyBinding Key="Add" Modifiers="Ctrl" Command="{Binding AddItemCommand}" />
    </Window.InputBindings>
    <views:DashboardView />
</Window>
